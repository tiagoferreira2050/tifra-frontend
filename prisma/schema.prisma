generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// =========================
// STORE / USER / CATEGORY
// =========================
//

model Store {
  id         String   @id @default(uuid())
  userId     String
  name       String
  subdomain  String   @unique
  address    String?
  logoUrl    String?
  coverImage String?
  createdAt  DateTime @default(now())

  user       User       @relation(fields: [userId], references: [id])
  categories Category[]
  products   Product[]

  @@index([subdomain])
}

model Category {
  id        String   @id @default(uuid())
  storeId   String
  name      String
  active    Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())

  store    Store     @relation(fields: [storeId], references: [id])
  products Product[]

  @@index([storeId])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())

  stores Store[]
}

//
// =========================
// PRODUCT
// =========================
//

model Product {
  id          String   @id @default(uuid())
  categoryId  String
  storeId     String
  name        String
  price       Float
  description String?
  imageUrl    String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())

  category Category @relation(fields: [categoryId], references: [id])
  store    Store    @relation(fields: [storeId], references: [id])

  // Agora correto → relação M:N com grupos de complementos
  productComplements ProductComplement[]

  @@index([categoryId])
  @@index([storeId])
}

//
// =========================
// COMPLEMENT GROUP + ITEMS
// =========================
//

model ComplementGroup {
  id          String   @id @default(uuid())
  name        String
  description String?  @default("")
  required    Boolean  @default(false)
  min         Int      @default(0)
  max         Int      @default(1)
  active      Boolean  @default(true)
  type        String   @default("multiple")
  createdAt   DateTime @default(now())

  // itens do grupo (como já funciona hoje)
  items Complement[]

  // relação M:N com produtos
  productComplements ProductComplement[]
}

model Complement {
  id          String   @id @default(uuid())
  groupId     String
  name        String
  price       Float    @default(0)
  active      Boolean  @default(true)
  imageUrl    String?
  description String?
  createdAt   DateTime @default(now())

  group ComplementGroup @relation(fields: [groupId], references: [id])

  // relação com ProductComplement
  productComplements ProductComplement[]

  @@index([groupId])
}

//
// =========================
// PIVÔ CORRETO:
// productId — groupId
// =========================
//

model ProductComplement {
  id        String @id @default(uuid())
  productId String
  groupId   String

  product      Product         @relation(fields: [productId], references: [id])
  group        ComplementGroup @relation(fields: [groupId], references: [id])
  complement   Complement?     @relation(fields: [complementId], references: [id])
  complementId String?

  @@unique([productId, groupId])
  @@index([productId])
  @@index([groupId])
}
